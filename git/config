[user]
	email = wietse.j@gmail.com
	name = Wietse
	signingkey = 8FDB2BB860D61019462FDCBA93E459761ECC6E25

[core]
    editor = vim
    excludesfile = ~/dotfiles/git/gitignore_global 

[commit]
    verbose = true
	gpgsign = true

[push]
	default = simple

[rebase]
    autosquash = true

[diff]
    tool = vimdiff

[difftool "vimdiff"]
    cmd = vim -d $LOCAL $BASE

[mergetool "fugitive"]
    cmd = vim -f -c \"Gdiff\" \"$MERGED\"

[alias]
    co = checkout
    ci = commit
    br = branch --color
    st = status
    l = log --oneline --decorate --graph --all
    lh = log --oneline --decorate --no-merges --graph --all
    lb = log --cherry --boundary --color --oneline --decorate --graph dev..HEAD
    pf = push origin +HEAD
    sa = stash save --include-untracked --keep-index

    # get the current branch name (used in other aliases)
    branch-name = "!git rev-parse --abbrev-ref HEAD"
    # push current branch to the remote "origin" and set it to track the upstream branch
    push-new-branch = "!git push -u origin $(git branch-name)"
    # Delete the remote version of the current branch
    delete-remote-branch = "!git push origin :$(git branch-name)"
    ## Interactively rebase all the commits on the current branch
    # rebase-branch = "!git rebase -i `git merge-base master HEAD`"
[gpg]
	program = gpg2
[pager]
	branch = false
	tag = false
    stash = false
