    lh = log --oneline --decorate --no-merges --graph --all
    lb = cherry --abbrev -v master HEAD
    lbr = cherry --abbrev -v master release-5.8.0
    pf = push origin +HEAD
    sa = stash save --include-untracked --keep-index

